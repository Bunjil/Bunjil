<%= form_for (@area || Area.new) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label "The northern-most point's latitude: " %>
    <%= f.text_field :top_lat %>
    <%= f.label "The western-most point's longitude: " %>
    <%= f.text_field :left_lon %>
    <%= f.label :width %>
    <%= f.text_field :width %>
    <%= f.label :height %>
    <%= f.text_field :height %>
  </p>
  <p><%= f.submit ((@area || Area.new).new_record? ? "Create" : "Update"),  :class => 'btn btn-primary'%></p>
<% end %>
