<% content_for :head do %>
    <%= javascript_include_tag "http://maps.googleapis.com/maps/api/js?v=3.9&sensor=false" %>
    <%= javascript_include_tag "observation_maps.js" %>
    <script type="text/javascript">
      google.maps.event.addDomListener(window, 'load', function() {
        initialize(<%= @points[:y] %>, <%= @points[:x] %>, <%= @points[:y] + @points[:height] %>, <%=  @points[:x] + @points[:width] %>, <%= @points_old[:y] %>, <%= @points_old[:x] %>, <%= @points_old[:y] + @points_old[:height] %>, <%= @points_old[:x] + @points_old[:width] %>, "<%= @area_update.image_url %>", "<%= @area_update_old.image_url %>");
      });
    </script>
<% end %>
<% title "Area Observation" %>
<p>
Click on locations on the right map that show deforestation
</p>
<div class="row">
  <div class="span6"><h2 style="text-align:center">Before</h2></div>
  <div class="span6"><h2 style="text-align:center">After</h2></div>
</div>
<div class="row">
  <div class="span6"><div id="left_map_canvas" class="obs_map"></div></div>
  <div class="span6"><div id="right_map_canvas" class="obs_map"></div></div>
</div>

<%= form_for @report do |f| %>
  <%= f.hidden_field :intersection_id %>
  <p>
    <%= f.label :description, "Comment" %>
    <%= f.text_field :description %>
  </p>
  <p><%= f.submit ("Submit"),  :class => 'btn btn-primary'%></p>
<% end %>

