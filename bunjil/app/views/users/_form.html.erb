<%= form_for @user do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= hidden_field_tag :role, "volunteer" %>
  </p>

  <p><%= f.submit (@user.new_record? ? "Sign up" : "Update"),  :class => 'btn btn-primary'%></p>
<% end %>
